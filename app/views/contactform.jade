#form-div.row
  form.form-horizontal
    h1 Contact Form
    .form-group
      label.col-sm-2.control-label Name
      .col-sm-10
        input#name.form-control(placeholder='bob smith' type='text')
    .form-group
      label.col-sm-2.control-label Email
      .col-sm-10
        input#email.form-control(placeholder='bob@aol.com' type='email')
    .form-group
      label.col-sm-2.control-label Phone
      .col-sm-10
        input#phone.form-control(placeholder='867-5309')
    .form-group
      label.col-sm-2.control-label Message
      .col-sm-10
        textarea#message.form-control(placeholder='send me some awesomeness')
    button#submit-form.btn.btn-large.btn-info Submit
